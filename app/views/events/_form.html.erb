<%= form_with model: event do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control mb-3" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control mb-3" %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: "form-control mb-3" %>
  </div>

  <div class="form-group">
    <%= form.label :date %><br>
    <%= form.datetime_select :date, class: "form-control mb-4" %>
  </div>

  <% if event.errors.any? %>
    <div class="errors">
      <% event.errors.full_messages.each do |message| %>
        <p class="text-warning mt-3 p-2"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <%= form.button button_text, type: "submit", :class=> "mt-3 btn btn-primary" %>
<% end %>